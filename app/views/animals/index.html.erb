<div align="center">

  <div id="wrapper">
    <h1>
      <div id="first">
        Animals index
      </div>
      <div align="right">
            <%= link_to 'New Animal', new_animal_path %>
      </div>
    </h1>
  </div>

  <p id="notice"><%= notice %></p>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  </table>

  <br>
  <% @animals.each do |animal| %>

  <div id="div1">
    <%= link_to animal.name, "/animals/#{animal.id}", class: "button"  %>
  </div>
  &mdash;
  <div id="div1">
    <p class="animal_time"><%= time_ago_in_words(animal.created_at) %> Ago &mdash;</p>
  </div>
  <div id="div1">
    <%= button_to "Delete me.", "/animals/#{animal.id}", method: 'delete', class: "button", data: { confirm: 'Are you sure?' }  %>
  </div>
  <hr width ="75%">
  <% end %>

</div>
