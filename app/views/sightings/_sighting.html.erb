<div class="sighting clearfix">

	<div class="sighting_content">

		<div class="container">
			Date of:
				<p class="sighting_date"><strong><%= sighting.date %></strong></p></div>
			<div class="container">
			Latitude:
				<p class="sighting_latitude"><strong><%= sighting.latitude %></strong></p></div>
			<div class="container">
			Longitude:
				<p class="sighting_longitude"><strong><%= sighting.longitude %></strong></p></div>
			<div class="container">
			Region:
				<p class="sighting_region"><strong><%= sighting.region %></strong></p></div>

	</div>

		<div class="container">
			<p> <%= link_to "Delete", animal_sighting_path(@animal, sighting), method: :delete, class: "button",
			data: { confirm: 'Are you sure?' }  %></p> |
			<p> <%= link_to "Edit", edit_animal_sighting_path(sighting.animal, sighting), class: "button" %></p>
		</div>

</div>
